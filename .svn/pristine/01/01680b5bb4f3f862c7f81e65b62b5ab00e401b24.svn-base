		        	}
		        }else{
		        	commentstr = '<li class="list-cell empty">댓글이 없습니다.</li>';
		        }
				
				
				
				$(".bbs").html(str);
				$(".comment-list").html(commentstr);
		        //$(".paging-block").html(json.paging);
		    },
		    error:function(xhr, status, error) {
				console.log("err:",xhr, status, error);
		    },
		    complete:function(data) {

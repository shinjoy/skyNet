	deleteFile : function(dataSeq,fileName,num) {
		if(confirm("파일을 삭제하시겠습니까?")) {
				var param = {
					dataSeq : dataSeq,
					fileName : fileName
				};
				$.ajax({
					type:"POST",
					url:"/proc/data_file_delete.go",
					dataType:"json",
					data:param,
					success:function(json){
						$("#img_"+num).remove();
					}
				}); 
			}
	},
	onfilesDelete : function(frm, seq) {
		if(confirm("삭제하시겠습니까?")) {
			var param = {
				dataSeq : seq
				
			};
			$.ajax({
				type:"POST",
				url:"/proc/data_delete.go",
				dataType:"json",
				data:param,
				success:function(json){
					document.location.href = "/m/files_list.go?projectSeq="+frm.projectSeq.value;
				}
			}); 
		}
		
		
